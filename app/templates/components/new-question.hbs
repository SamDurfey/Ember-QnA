{{#if questionFormIsShowing}}
	<h1>Write a new question!</h1>
	<div>
		<form class="form-inline">
			<div class="form-group">
				<label for="title">Title:</label>
				{{input value=title id="title" class="form-control"}}
			</div>
		</form>
		<div class="form-group">
			<label for="body">Question:</label>
			{{textarea value=body id="body" class="form-control" rows="3"}}
		</div>
			<button class="btn-lg btn-success" {{action 'saveQuestion'}}>Save</button>
		</div>
{{else}}
	<button class="btn btn-default" {{action 'showQuestionForm'}}>Ask A New Question</button>
{{/if}}
